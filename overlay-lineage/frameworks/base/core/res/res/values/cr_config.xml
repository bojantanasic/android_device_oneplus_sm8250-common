        <item>com.netease.snailread</item>
        <item>com.baidu.browser.apps</item>
        <item>org.thunderdog.challegram</item>
        <item>com.snapchat.android</item>
        <item>com.facebook.orca</item>
        <item>com.Slack</item>
        <item>tugapower.codeaurora.browser</item>
